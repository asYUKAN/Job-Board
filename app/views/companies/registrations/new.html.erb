<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "companies/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">  
    <%= f.label :contact %><br />
    <%= f.number_field :contact, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :website_link %><br />
    <%= f.url_field :website_link, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :about %><br />
    <%= f.text_area :about, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :founded %><br />
    <%= f.number_field :founded, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :size %><br />
    <%= f.number_field :size, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "companies/shared/links" %>
