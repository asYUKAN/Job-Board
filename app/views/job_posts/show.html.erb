    </style>
    <script>
    function validform() {

        var a = document.forms["my-form"]["full-name"].value;
        var b = document.forms["my-form"]["email-address"].value;
        var c = document.forms["my-form"]["username"].value;
        var d = document.forms["my-form"]["permanent-address"].value;
        var e = document.forms["my-form"]["nid-number"].value;

        if (a==null || a=="")
        {
            alert("Please Enter Your Full Name");
            return false;
        }else if (b==null || b=="")
        {
            alert("Please Enter Your Email Address");
            return false;
        }else if (c==null || c=="")
        {
            alert("Please Enter Your Username");
            return false;
        }else if (d==null || d=="")
        {
            alert("Please Enter Your Permanent Address");
            return false;
        }else if (e==null || e=="")
        {
            alert("Please Enter Your NID Number");
            return false;
        }

    }
    </script>
</head>
<body>



<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header text-primary font-weight-bold">Job Post - <%=@company.name%></div>
                        <div class="card-body">
                       
                                <div class="form-group row">
                                    <label for="full_name" class="col-md-4 col-form-label text-md-right">Role</label>
                                    <div class="col-md-6 form-control">
                                        <%= @job_post.title%>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">Job Mode</label>
                                    <div class="col-md-6 form-control">
                                      
                                       <%= @job_post.mode %>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label for="present_address" class="col-md-4 col-form-label text-md-right">Job Type</label>
                                    <div class="col-md-6  form-control">
                                    <%= @job_post.job_type %>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="permanent_address" class="col-md-4 col-form-label text-md-right">Website Link</label>
                                    <div class="col-md-6  form-control">
                                    <%= @job_post.apply_link %>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="present_address" class="col-md-4 col-form-label text-md-right">Location</label>
                                    <div class="col-md-6  form-control">
                                    <%= @job_post.location%>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="present_address" class="col-md-4 col-form-label text-md-right">Description</label>
                                    <div class="col-md-6  form-control">
                                    <%= @job_post.description%>
                                    
                                    </div>
                                </div>
                               
                                    
                                    <div class="col-md-6 offset-md-4 d-flex justify-content-center">
                                    <%= link_to "Back", :back, class: "btn btn-primary d-flex justify-content-center" %>
                                    </div>
                                </div>
                               
                               
                                
                                
                    </div>
            </div>
        </div>
    </div>

</main>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>


